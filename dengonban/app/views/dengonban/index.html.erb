<table class="form">
  <%= p "eeee" %>
  <%=form_tag(controller: "dengonban",action: "index") do%>
  <tr>
    <td>名前</td>
    <td><%= text_field_tag("name") %></td>
  </tr>
  <tr>
    <td>メール</td>
    <td><%=text_field_tag("mail") %></td>
  </tr>
  <tr>
    <td><%=text_area_tag("mag",'',size: "50x3") %></td>
  </tr>
  <tr>
    <td><%= submit_tag("Click") %></td>
  </tr>
  <% end %>
</table>



<table class="dengon">
  <tr>
    <th style="width: 50%">メッセージ</th>
    <th>名前</th>
    <th>メール</th>
    <th>投稿日</th>
  </tr>
  <%#ハッシュテーブルの展開 %>
  <% @dengon_data.each do |key,obj| %>
  <tr>
    <td class="mag"><%= obj['mag'] %></td>
    <td class="name"><%= obj['name'] %></td>
    <td class="mail"><%= obj['mail'] %></td>
    <td class="time"><%= Time.at(key.to_i) %></td><%#タイムスタンプ %>
  </tr>
  <% end %>
</table>